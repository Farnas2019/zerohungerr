<%- include('./partials/header')%>

<div class="container mt-5" style="padding-bottom: 100px;">
    <div class="col-sm-6 sign-up">
        <h1 class="text-center"><b>Sign-Up</b></h1>
        <form action="/register" method="POST" enctype="multipart/form-data">
            <div class="row">
                <div class="col-sm-6">
                    <div class="mb-3">
                        <label for="formGroupExampleInput" class="form-label">Full-Name</label>
                        <input type="text" class="form-control" id="formGroupExampleInput"
                            placeholder="Enter your full-name" required name="name">
                    </div>
                    <div class="mb-3">
                        <label for="formGroupExampleInput2" class="form-label">E-mail</label>
                        <input type="email" class="form-control" id="formGroupExampleInput2"
                            placeholder="Example@gmail.com" required name="username">
                    </div>
                    <div class="mb-3">
                        <label for="formGroupExampleInput2" class="form-label">Resturant-Name</label>
                        <input type="text" class="form-control" id="formGroupExampleInput2"
                            placeholder="Resturant-Name" required name="restname">
                    </div>
                    <div class="mb-3">
                        <label for="formGroupExampleInput2" class="form-label">Upload Resturant-Photo</label>
                        <input type="file" class="form-control" id="formGroupExampleInput2" required name="image">
                    </div>
                
                    <div class="mb-3">
                        <label for="formGroupExampleInput2" class="form-label">Password</label>
                        <input type="password" class="form-control" id="formGroupExampleInput2"
                            placeholder="Enter your password" required name="password">
                    </div>
                 
                </div>
                <div class="col-sm-6">
               
                    <div class="mb-3">
                        <label for="formGroupExampleInput2" class="form-label">State</label>
                        <input type="text" class="form-control" id="formGroupExampleInput2"
                            placeholder="Kwara State" required name="state">
                    </div>
                    <div class="mb-3">
                        <label for="formGroupExampleInput2" class="form-label">City</label>
                        <input type="text" class="form-control" id="formGroupExampleInput2" placeholder="Ilorin"
                            required name="city">
                    </div>
                    <div class="mb-3">
                        <label for="formGroupExampleInput2" class="form-label">Country</label>
                        <input type="text" class="form-control" id="formGroupExampleInput2" placeholder="Nigeria"
                            required name="country">
                    </div>
                    <div class="mb-3">
                        <label for="formGroupExampleInput2" class="form-label">Address</label>
                        <input type="text" class="form-control" id="formGroupExampleInput2"
                            placeholder="No.3, agba-dam" required name="location">
                    </div>
                    <div class="mb-3">
                        <label for="formGroupExampleInput2" class="form-label">Phone Number</label>
                        <input type="text" class="form-control" id="formGroupExampleInput2"
                            placeholder="Enter your phone Number" required name="phone">
                    </div>
                  
                </div>
                
            </div>
            <div class=" d-flex justify-content-center mt-3">
                <p style="text-align:center"> Already Have an Account? <a href="/login" style="color: orange;">Login</a></p>
            </div>

                <div class=" d-flex justify-content-center mt-3">
                    <button class="btn btn-default" type="submit">Submit</button>
                </div>
               
        </form>
    </div>
</div>
<%- include('./partials/footer')%>