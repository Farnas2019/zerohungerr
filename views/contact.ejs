<%- include('./partials/header')%>
<div class="container mt-5" style="padding-bottom: 100px;">
    <div class="col-sm-6 sign-up">
        <h1 class="text-center"><b>Contact Us</b></h1>
        <form action='/contact' method="POST">
            <div class="row">
                <div class="col-sm-6">
                        <div class="mb-3">
                        <label for="formGroupExampleInput2" class="form-label">Full Name</label>
                        <input type="text" class="form-control" id="formGroupExampleInput2"
                            placeholder="Farhan Nasiruddeen" required name='name'>
                        </div>
                 
                </div>

                <div class="col-sm-6">
               
                    <div class="mb-3">
                        <label for="formGroupExampleInput2" class="form-label">Email</label>
                        <input type="email" class="form-control" id="formGroupExampleInput2"
                            placeholder="Example@gmail.com" required name="email">
                    </div>
                                        
                  
                </div>

                <div class="col-sm-12">
               
                    <div class="mb-12">
                        <label for="formGroupExampleInput2" class="form-label">Subject</label>
                        <input type="text" class="form-control" id="formGroupExampleInput2"
                            placeholder="I Want to donate" required name="subject">
                    </div>
                                        
                  
                </div>
                <div class="col-sm-12">
               
                    <div class="mb-12">
                        <label for="formGroupExampleInput2" class="form-label">Message</label>
                        <textarea  type="text" class="form-control" id="formGroupExampleInput2" name="message" id="" cols="30" rows="10" placeholder="Your Message goes here" required></textarea>
                             
                    </div>
                                        
                  
                </div>
              
            </div>
            <div class=" d-flex justify-content-center mt-3">
                <p style="text-align:center"> Do You want to Donate? <a href="/donate" style="color: orange;">Donate Online</a></p>
            </div>
                <div class=" d-flex justify-content-center mt-3">
                    <button class="btn btn-default" type="submit">Submit</button>
                </div>
               
        </form>
    </div>
</div>
<%- include('./partials/footer')%>
